<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_app_specific_storage_persist"
        android:layout_width="match_parent"
        android:text="App Specific Storage - Persist"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_app_specific_storage_cache"
        android:layout_width="match_parent"
        android:text="App Specific Storage - Cache"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sharedc_storage"
        android:layout_width="match_parent"
        android:text="Shared Storage"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSharedPreference"
        android:layout_width="match_parent"
        android:text="Shared Preference"
        android:layout_height="wrap_content"/>

</LinearLayout>